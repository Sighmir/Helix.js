{
  "name": "jshelix",
  "version": "1.1.1",
  "description": "Javascript Helix API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "example": "example"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sighmir/jsHelix.git"
  },
  "author": "Guilherme Caulada (Sighmir)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Sighmir/jsHelix/issues"
  },
  "homepage": "https://github.com/Sighmir/jsHelix#readme",
  "scripts": {
    "start": "node dist/index.js",
    "start:example": "ts-node --no-warnings example/index.ts",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "test": "jest --coverage",
    "test:dev": "jest --coverage --watchAll",
    "test:staged": "jest --changedSince=HEAD --passWithNoTests",
    "test:clean": "rm -rf ./coverage",
    "prettier:check": "prettier --list-different 'src/**/*.{ts,tsx}'",
    "prettier:write": "prettier --write 'src/**/*.{ts,tsx}'",
    "build": "yarn build:clean && tsc && webpack",
    "build:clean": "rm -rf ./dist",
    "lint": "eslint . --ext ts",
    "clean": "yarn build:clean && yarn test:clean && rm -rf ./node_modules",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.0.7",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "_moduleAliases": {
    "@": "./src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": ["prettier --write", "yarn lint --fix"]
  },
  "jest-junit": {
    "outputDirectory": "coverage"
  },
  "keywords": ["helix"]
}
